pipeline {
  agent {
    docker {
      image 'abhishekf5/maven-abhishek-docker-agent:v1'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
    }
  }

  environment {
    DOCKER_IMAGE = "jerry943/ultimate-cicd:${BUILD_NUMBER}"
    GIT_REPO_NAME = 'Jenkins-ArgoCD-Pipeline'
    GIT_USER_NAME = 'Harshjerry'
    SONAR_HOST_URL = 'http://3.83.145.137:9000/'
  }

  stages {

    stage("Checkout") {
      steps {
        echo 'Code checkout already handled by Jenkins'
      }
    }

    stage("Build and Test") {
      steps {
        sh '''
          cd java-maven-argocd-helm-k8s/spring-boot-app
          mvn clean package
        '''
      }
    }

    stage("Static Code Analysis with SonarQube") {
      steps {
        withCredentials([string(credentialsId: 'sonar-token', variable: 'SONAR_TOKEN')]) {
          sh '''
            cd java-maven-argocd-helm-k8s/spring-boot-app
            mvn sonar:sonar -Dsonar.host.url=$SONAR_HOST_URL -Dsonar.login=$SONAR_TOKEN
          '''
        }
      }
    }

    stage("Build and Push Docker Image") {
      environment {
        REGISTRY_CREDENTIALS = credentials('docker-cred')
      }
      steps {
        script {
          sh '''
            cd java-maven-argocd-helm-k8s/spring-boot-app
            docker build -t $DOCKER_IMAGE .
          '''
          def dockerImage = docker.image("${DOCKER_IMAGE}")
          docker.withRegistry("https://index.docker.io/v1/", "docker-cred") {
            dockerImage.push()
          }
        }
      }
    }

    stage("Update Deployment File") {
      steps {
        withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
          sh '''
            cd java-maven-argocd-helm-k8s/spring-boot-app
            git config user.email "harshdeep1043@gmail.com"
            git config user.name "Harshjerry"
            sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" deployment.yaml
            git add deployment.yaml
            git commit -m "Update deployment file"
            git push https://$GITHUB_TOKEN@github.com/$GIT_USER_NAME/$GIT_REPO_NAME HEAD:main
          '''
        }
      }
    }

  }
}
